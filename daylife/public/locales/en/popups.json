{
    "download": {
        "title": "Download the app!",
        "images": [
            {
                "src": "/assets/images/popups/qr.webp",
                "alt": "Download on the App Store",
                "link": "https://itunes.apple.com/us/app/your-app-name/id123456789?ls=1&mt=8"
            },
            {
                "src": "/assets/images/popups/qr.webp",
                "alt": "Get it on Google Play",
                "link": "https://play.google.com/store/apps/details?id=com.your.app"
            }
        ]
    },
    "form": {
        "title": "Tell us about your needs",
        "inputs": [
            {
                "type": "text",
                "name": "user-name",
                "placeholder": "Name",
                "required": true
            },
            {
                "type": "email",
                "name": "user-email",
                "placeholder": "Email",
                "required": true
            },
            {
                "type": "textarea",
                "name": "user-message",
                "placeholder": "Message",
                "required": false
            },
            {
                "type": "submit",
                "value": "Send",
                "required": true
            }
        ],
        "image": {
            "src": "/assets/images/popups/send_msg.webp",
            "alt": "Send us a message"
        }
    },
    "success": {
        "title": "Thank you!",
        "subtitle": "Your message has been sent successfully",
        "button": "OK",
        "image": {
            "src": "/assets/images/popups/thank_you_page.webp",
            "alt": "Success"
        }
    }
}