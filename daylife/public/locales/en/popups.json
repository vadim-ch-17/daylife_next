{
    "download": {
        "title": "Download the app!",
        "images": [
            {
                "src": "/assets/images/popups/qr.webp",
                "alt": "Download on the App Store",
                "link": "https://itunes.apple.com/us/app/your-app-name/id123456789?ls=1&mt=8"
            },
            {
                "src": "/assets/images/popups/qr.webp",
                "alt": "Get it on Google Play",
                "link": "https://play.google.com/store/apps/details?id=com.your.app"
            }
        ]
    },
    "form": {
        "title": "Tell us about your needs",
        "inputs": [
            {
                "tag": "input",
                "type": "text",
                "name": "user-name",
                "label": "Name",
                "validation": {
                    "type": "text",
                    "require": "Please enter your name",
                    "min": "Your name must be at least 2 characters long"
                }
            },
            {
                "tag": "input",
                "type": "email",
                "name": "user-email",
                "label": "Email",
                "validation": {
                    "type": "email",
                    "require": "Please enter a valid email address",
                    "email": "Please enter a valid email address"
                }
            },
            {
                "tag": "textarea",
                "type": "textarea",
                "name": "user-message",
                "label": "Message",
                "attrs": {
                    "rows": "4"
                }
            },
            {
                "tag": "input",
                "type": "submit",
                "value": "Send"
            }
        ],
        "image": {
            "src": "/assets/images/popups/send_msg.webp",
            "alt": "Send us a message"
        }
    },
    "success": {
        "title": "Thank you!",
        "subtitle": "Your message has been sent successfully",
        "button": "OK",
        "image": {
            "src": "/assets/images/popups/thank_you_page.webp",
            "alt": "Success"
        }
    }
}